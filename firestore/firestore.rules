service cloud.firestore {
  match /databases/{database}/documents {
    match /posts/{id} {
      allow read;
      // ログインユーザーのみ書き込み可
      allow write: if request.auth.uid != null;
    }

    match /users/{uid} {
      // ログインユーザーのみ読み取り＆作成可
      allow read, create: if request.auth.uid != null;
      // ユーザー自身のデータのみ書き込み可
      allow update, delete: if request.auth.uid == uid;
    }
  }
}
